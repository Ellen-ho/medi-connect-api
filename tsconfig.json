{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es6"],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    // "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true
  }
}
