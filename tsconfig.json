{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "lib": ["es6"],
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    // "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "scripts", "migrations", "build", "seeder"],
  "ts-node": {
    "transpileOnly": true
  }
}
